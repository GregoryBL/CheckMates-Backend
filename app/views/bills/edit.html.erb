<header></header>

<div class="container">
	<h1>Select items that belong to you:</h1>

<%= form_for @bill do |f| %>
  <%= hidden_field_tag "user_id", @user_id %>
  <%= hidden_field_tag "bill[id]", @bill.id %>

    <% @bill.items.each do |item| %>
      <div class="checkbox custom">
        <input id="<%= item.id %>" class="css-checkbox" type="checkbox" />
        <label for="<%= item.id %>" class="css-label"></label>

        <% p item.user_id && item.user_id != @user_id %>
          <%= check_box_tag "bill[items][#{item.id}][user_id]", @user_id, item.user_id == @user_id, disabled: item.user_id && item.user_id != @user_id %>
          <label><%= item.item_description %>: <%= (item.price.to_f / 100).to_s %></label>
      </div>
    <% end %>
      <%= f.submit %>
<% end %>


<div class="signature">
	Brought to you by the <a href="http://checkmatesapp.com">CheckMates</a> app
</div>
